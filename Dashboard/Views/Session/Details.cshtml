@model Core.Session

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Session</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Firstname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionEmployee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionEmployee.Firstname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
</div>
<h3>Notes</h3>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Notices.FirstOrDefault().Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notices.FirstOrDefault().Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notices.FirstOrDefault().Date)
        </th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Notices != null)
    {
        foreach (var item in Model.Notices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SessionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>