            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Patient.PatientNumber)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.PatientNumber)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.DossierId">Edit</a> | *@
                <a asp-action="Details" asp-route-id="@item.DossierId" class=" btn btn-primary">Details</a>
